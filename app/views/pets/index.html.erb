<div class = "card_container">
<div>
    <h1>Pets Index </h1>
</div>

<div class="ui link cards">
<% @pets.each do |pet| %>
<div class="card">
    <div class="image">
        <img src= <%= pet.image %> >
    </div>
    <div class="content">
        <a class="header"><%=link_to pet.name, pet_path(pet)%></a>
        <div class="meta">
            <span class="date">Joined in 2013</span>
        </div>
        <div class="description">
            <%= pet.bio %>
        </div>
    </div>
    <div class="extra content">
        <a>
        <i class="user icon"></i>
        
        </a>
    </div>
</div>
<% end %>
</div>
</div>