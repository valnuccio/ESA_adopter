<% if @user.id == current_user.id %>

    <h1> Welcome to Your Account <%= @user.name %> </h1> 


    <h3> <%= @user.location %> </h3>
    <h3> Your Current User Rating is: <%= @user.rating %> </h3>
    <h3> We Will display our image here this is a place holder </h3>

    <p> <%= @user.bio %> </p>

    <h3>Pets:</h3>
    <hr>
    <%= link_to "View Other Users", users_path%>
    <ul>
        <% @user.my_pets.each do |pet| %>
            <li><%= link_to pet.name, pet_path(pet) %> </li>
        <br>
        <% end %>
        </ul>
    
    <%  else  %>
    
    <h1>This is THEIR PAGE <%= @user.name %> </h1> 


    <h3> <%= @user.location %> </h3>
    <h3>Rating: <%= @user.rating %> </h3>
    <% if @post.main_image.attached? %>
         <%= image_tag @post.main_image %>
    <% end %>

    <p> <%= @user.bio %> </p>

    <h3>Pets:</h3>
    <hr>
    <%= link_to "View Other Users", users_path%>
    <ul>
        <% @user.my_pets.each do |pet| %>
            <li><%= link_to pet.name, pet_path(pet) %> </li>
        <br>
        <% end %>
    </ul>

<% end %>
    



