<% if @user.id == current_user.id %>

    <h1> Welcome to Your Account <%= @user.name %> </h1> 

    <% if current_user.main_image.attached? %>
        <%= image_tag url_for(current_user.main_image) %>
    <% end %>

    <% if @user.img_url %>
        <%= image_tag(@user.img_url) %>
    <% else %>
        Dont be camera shy ^_^ <br>
        Edit your profile and add an image!
    <% end %>
    
    <p></p>
    <%= button_to "Edit Profile", edit_user_path(@user.id), :method => "get" %> <br>

    <div>
        <h3> <%= label_tag "Location:" %> </h3>
        <%= @user.location %> </p>
    </div>

    <div>
        <h3><%= label_tag "Bio:" %></h3>
        <%= @user.bio %> </p>
    </div>
    
    <div>
        <h3><%= label_tag "Pets rented:" %></h3>
        <ul>
            <% @user.pets.each do |pet| %>
                <li><%= pet %></li>
            <% end %>
        </ul>
    </div>
    
    <div>
        <h3><%= label_tag "My pets:" %></h3>
        <ul>
            <% @user.pets.each do |pet| %>
                <li><%= pet %></li>
            <% end %>
        </ul>
    </div>

    <hr>
    <%= link_to "View Other Users", users_path%>
    <p></p>
    <%= link_to "Find a pet to rent", pets_path%>
    <ul>
        <% @user.my_pets.each do |pet| %>
            <li><%= link_to pet.name, pet_path(pet) %> </li><br>
        <% end %>
    </ul>
    <%= button_to "Add More Pets", new_pet_path, :method => "get" %> <br>
    
<%  else  %>
    
    <h1> <%= @user.name %> </h1> 


